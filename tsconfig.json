{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "frontend/**/*.ts",
    "frontend/**/*.tsx"
  ],
  "files": ["ts-shim.d.ts"]
}
